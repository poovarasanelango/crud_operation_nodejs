<h3>Edit User</h3>
{{#if msg}}
<div class="alert">{{msg}} </div>
{{/if}}

{{#each rows}}

<form action="/edituser/{{this.ID}}" method="post">
<div class="container">
<div class="form-group">
<label for="name">Name</label>
<input type="text" name="name"  value="{{this.NAME}}">
</div>


<div class="form-group">
<label for="name">Age</label>
<input type="text" name="age"  value="{{this.AGE}}">
</div>


<div class="form-group">
<label for="name">City</label>
<input type="text" name="city"  value="{{this.CITY}}">
</div>


<div class="form-group">
<label for="name">Phone Number</label>
<input type="text" name="phonenumber"  value="{{this.PHONE_NUMBER}}">

<div class="form-group">
    <button type="submit" class="submitbtn">Save</button>
    <a href="/">Home</a>
</div>


</div>
</div>


</form>

{{/each}}